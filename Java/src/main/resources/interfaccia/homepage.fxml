<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="792.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="smu.Controller.HomepageController">
   <BorderPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="792.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

      <!-- Contenuto principale -->
      <center>
         <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <!-- Saldo e carta -->
            <HBox alignment="CENTER_LEFT" prefWidth="792.0" spacing="10.0">
               <!-- Saldo -->
               <VBox>
                  <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Saldo disponibile:">
                     <VBox.margin>
                        <Insets left="30.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="balanceLabel" style="-fx-font-size: 26px; -fx-font-weight: bold;" text="â‚¬ 0.00">
                     <VBox.margin>
                        <Insets left="30.0" top="5.0" />
                     </VBox.margin>
                  </Label>
               </VBox>

                     <!-- Pulsante precedente -->
               <Button fx:id="previousCardButton" style="-fx-background-color: #008080; -fx-text-fill: white; -fx-font-size: 16px;" text="Precedente" />

                     <!-- Carta -->
               <VBox fx:id="DatiCarta" alignment="CENTER" prefHeight="159.0" prefWidth="285.0" spacing="10.0" style="-fx-background-color: #79a6a6; -fx-background-radius: 15px; -fx-padding: 20px;">
                  <Label fx:id="cardNameLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="---" />
                  <Label fx:id="cardNumberLabel" style="-fx-font-size: 14px; -fx-text-fill: white;" text="Numero Carta: **** **** **** ----" />
                  <HBox spacing="10">
                     <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="Tipo Carta:" />
                     <Label fx:id="cardTypeLabel" style="-fx-font-size: 14px; -fx-text-fill: white;" text="---" />
                  </HBox>
                  <HBox spacing="10">
                     <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="Scadenza:" />
                     <Label fx:id="expiryDateLabel" style="-fx-font-size: 14px; -fx-text-fill: white;" text="--/--" />
                  </HBox>
               </VBox>

                     <!-- Pulsante successivo -->
               <Button fx:id="nextCardButton" onAction="#handleNextCard" style="-fx-background-color: #008080; -fx-text-fill: white; -fx-font-size: 16px;" text="Successiva" />
            </HBox>

                  <!-- Pulsante aggiungi transazione -->
            <HBox alignment="CENTER_LEFT" prefWidth="792.0">
               <Button fx:id="addTransactionButton" style="-fx-background-color: #008080; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5px;" text="Aggiungi Transazione">
                  <HBox.margin>
                     <Insets left="30.0" />
                  </HBox.margin>
               </Button>
            </HBox>

                  <!-- Tabella delle transazioni -->
            <TableView fx:id="transactionsTableView" prefHeight="300.0" prefWidth="767.0">
               <columns>
                  <TableColumn fx:id="tipoColumn" prefWidth="100.0" text="Tipo" />
                  <TableColumn fx:id="importoColumn" prefWidth="100.0" text="Importo" />
                  <TableColumn fx:id="dataColumn" prefWidth="100.0" text="Data" />
                  <TableColumn fx:id="categoriaColumn" prefWidth="100.0" text="Categoria" />
                  <TableColumn fx:id="causaleColumn" prefWidth="150.0" text="Causale" />
                  <TableColumn fx:id="daAColumn" prefWidth="150.0" text="Da / A" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </VBox>
      </center>
      <top>
         <Pane fx:id="headerPane" prefHeight="30.0" prefWidth="792.0" style="-fx-background-color: #008080;" BorderPane.alignment="CENTER">
            <children>
               <fx:include source="menu.fxml" />
               <Label layoutX="52.0" layoutY="6.0" text="Homepage" textFill="WHITE">
                  <font>
                     <Font size="16.0" />
                  </font>
               </Label>
               <Button fx:id="statisticaButton" layoutX="718.0" layoutY="1.0" mnemonicParsing="false" onAction="#scenaReport" style="-fx-background-color: #008080;" text="Report" textFill="WHITE" />
            </children>
         </Pane>
      </top>
   </BorderPane>
</AnchorPane>
